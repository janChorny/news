{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "removeComments": true,
    "downlevelIteration": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
  },
  "includes": [
    "src/**/*.ts"
  ]
}
